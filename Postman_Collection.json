              "raw": "{\n  \"orderId\": 3,\n  \"items\": [\n    {\n      \"productId\": 1,\n      \"productCode\": \"MED001\",\n      \"productName\": \"Acetaminofén 500mg\",\n      \"orderedQuantity\": 10,\n      \"receivedQuantity\": 10\n    }\n  ],\n  \"notes\": \"Recepción inicial\"\n}"
