          "request": { "method": "PATCH", "header": [], "url": { "raw": "{{base_url}}/goods-receipts/1/reject?reason=damaged", "host": ["{{base_url}}"], "path": ["goods-receipts","1","reject"], "query": [{ "key": "reason", "value": "damaged" }] } }
        },
        {
          "name": "Delete Goods Receipt",
          "request": { "method": "DELETE", "header": [], "url": { "raw": "{{base_url}}/goods-receipts/1", "host": ["{{base_url}}"], "path": ["goods-receipts","1"] } }
