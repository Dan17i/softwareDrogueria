        {
          "name": "Get All Goods Receipts",
          "request": { "method": "GET", "header": [], "url": { "raw": "{{base_url}}/goods-receipts", "host": ["{{base_url}}"], "path": ["goods-receipts"] } }
        },
        {
          "name": "Receive Goods Receipt",
          "request": { "method": "PATCH", "header": [], "url": { "raw": "{{base_url}}/goods-receipts/1/receive", "host": ["{{base_url}}"], "path": ["goods-receipts","1","receive"] } }
