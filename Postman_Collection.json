        {
          "name": "Get Goods Receipt by Number",
          "request": { "method": "GET", "header": [], "url": { "raw": "{{base_url}}/goods-receipts/number/GR-202400001", "host": ["{{base_url}}"], "path": ["goods-receipts","number","GR-202400001"] } }
