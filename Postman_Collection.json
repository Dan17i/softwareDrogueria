          "request": { "method": "GET", "header": [], "url": { "raw": "{{base_url}}/goods-receipts/supplier/2", "host": ["{{base_url}}"], "path": ["goods-receipts","supplier","2"] } }
        },
        {
          "name": "Get Goods Receipts by Status",
          "request": { "method": "GET", "header": [], "url": { "raw": "{{base_url}}/goods-receipts/status/PENDING", "host": ["{{base_url}}"], "path": ["goods-receipts","status","PENDING"] } }
        },
        {
          "name": "Get Pending Goods Receipts",
          "request": { "method": "GET", "header": [], "url": { "raw": "{{base_url}}/goods-receipts/pending", "host": ["{{base_url}}"], "path": ["goods-receipts","pending"] } }
